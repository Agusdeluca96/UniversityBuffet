					if (ubicacion == ''){
						alert('Debe completar la ubicacion para continuar.');
						return false;
					}
				}
    		}
    </script>
{% endblock %}

{% block content %}
<div class="right_side">
	<article class="agregar_articulo">	<!--CUERPO DE LA PAGINA-->
		<h2>Registro de Usuario</h2>
		<form method="post" action="./?action=user_add_check" onsubmit="return ubicacionObligatoria()" class="userForm">
			<input type="hidden" name="token" value="{{token}}" />
		    <div class="">
		        <div class="">
		            <label for="username" class="">Nombre de Usuario</label>
		            <input type="text" id="username" name="username" class="inputElement" placeholder="Ingresa el nombre de usuario aqui ..." required>
		        </div>
		        <div class="">
		            <label for="nombre" class="">Nombre</label>
		            <input type="text" id="nombre" name="nombre" class="inputElement" placeholder="Ingresa el nombre aqui ..." required>
		        </div>
		        <div class="">
		            <label for="apellido" class="">Apellido</label>
		            <input type="text" id="apellido" name="apellido" class="inputElement" placeholder="Ingresa el apellido aqui ..." required>
		        </div>

		        <div class="">
		            <label for="dni" class="">DNI</label>
		            <input type="number" id="dni" name="dni" class="inputElement" onkeypress="return justNumbers(event);" placeholder="Ingrese el DNI aqui ..." required>
		        </div>
		        <div class="">
		            <label for="mail" class="">Mail</label>
		            <input type="email" id="mail" name="mail" class="inputElement" placeholder="Ingrese el mail aqui ..." required>
		        </div>
		        <div class="">
		            <label for="contrasena" class="">Contrase&ntilde;a</label>
		            <input type="password" id="contrasena" name="contrasena" class="inputElement" placeholder="Ingrese la contraseña aqui ..." required>
		        </div>
		        <div class="">
		            <input type="password" id="contrasena2" name="contrasena2" class="inputElement" placeholder="Vuelva a ingresar la contraseña aqui ..." required>
		        </div>
		        <div class="">
		            <label for="telefono" class="">Telefono</label>
		            <input type="number" id="telefono" name="telefono" class="inputElement" onkeypress="return justNumbers(event);" placeholder="Ingrese el telefono aqui ..." required>
		        </div>
		        {% if rol is not null %}
				<div class="">
		            <label for="seleccion" class="">Rol</label>
		            <div class="select">
		                <select id="seleccion" name="rol" required>
		                    <option disabled selected value>Seleccione una opcion</option>
		                    <option value="0"> Administracion </option>
		                    <option value="1"> Gestion </option>
		                    <option value="2"> Usuario Online </option>
		                </select>
		            </div>
		        </div>
		        {% endif %}
				{% if rol is not null %}
				<div class="">
		            <label for="seleccion2" class="">Habilitado</label>
		            <div class="select">
		                <select id="seleccion2" name="habilitado" required>
		                	<option disabled selected value>Seleccione una opcion</option>
		                    <option value="0"> No </option>
		                    <option value="1"> Si </option>
		                </select>
		            </div>
		        </div>
		        {% endif %}
		        <div class="">
		            <label for="ubicacion" class="">Ubicacion</label>
		            <input type="text" id="ubicacion" name="ubicacion" class="inputElement" placeholder="Ingrese la ubicacion aqui ...">
		        </div>
		        <div class="">
		            <label for="departamento" class="">Departamento en que trabaja</label>
		            <input type="text" id="departamento" name="departamento" class="inputElement" placeholder="Ingresa el departamento aqui ...">
		        </div>
		    </div>
			<div>
			    <button id="izquierda" type="submit">Registrar</button>
			    <button id="derecha" type="reset">Reset</button>
			</div>
		</form>
	</article>
</div>
{% endblock %}
