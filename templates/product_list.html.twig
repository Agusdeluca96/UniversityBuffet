{% extends "list_parent.html.twig" %}

{% block content %}
        <div class="right_side">
            <article class="agregar_articulo">  <!--CUERPO DE LA PAGINA-->
                <h2>Listado de Productos</h2>
                <table>
                    <tr>
                        <th>Nombre</th>
                        <th>Proveedor</th>
                        <th>Stock actual</th>
                        <th>Stock minimo</th>
                        <th>Precio Unitario</th>
                        <th></th> <!-- BOTON VER -->
                        <th></th> <!-- BOTON MODIFICAR -->
                        <th></th> <!-- BOTON ELIMINAR -->
                    </tr>
                    {% for product in productos %}
                    <tr>
                        <td>{{ product.getNombre }}</td>
                        <td>{{ product.getProveedor }}</td>
                        <td>{{ product.getStock }}</td>
                        <td>{{ product.getStockMinimo }}</td>
                        <td>{{ product.getPrecioVentaUnitario }}</td>
                        <td><a href="./?action=product_view&id={{product.getId}}"><i class="fa fa-eye"></i></a></td>
                        <td><a href="./?action=product_modify_check&id={{product.getId}}"><i class="fa fa-pencil"></i></a></td>
                        <td><a href="./?action=product_delete&id={{product.getId}}"><i class="fa fa-trash"></i></a></td>
                    </tr>
                    {% endfor %}
                </table>
                {% if num_pagina > 0 %}
                <button id="izquierda" type="submit" onClick="window.location.href='./?action=product_list&anterior={{num_pagina}}'">Anterior</button>
                {% endif %}
                {% if num_pagina < total_paginas %}
                <button id="derecha" type="reset" onClick="window.location.href='./?action=product_list&siguiente={{num_pagina}}'">Siguiente</button>
                {% endif %}
            </article>
            <a id="add" href="./?action=product_add">Agregar nuevo articulo</a>
        </div>
{% endblock %}