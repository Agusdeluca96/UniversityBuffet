{% extends "list_parent.html.twig" %}

{% block content %}
        <div class="right_side">
            <article class="agregar_articulo">  <!--CUERPO DE LA PAGINA-->
                <h2>Listado de Ventas</h2>
                <table>
                    <tr>
                        <th>Numero de Venta</th>
                        <th>Fecha y hora</th>
                        <th></th> <!-- BOTON MODIFICAR -->
                        <th></th> <!-- BOTON ELIMINAR -->
                    </tr>
                    {% for venta in ventas %}
                    <tr>
                        <td>{{ venta.getId }}</td>
                        <td>{{ venta.getFecha }}</td>
                        <td><a href="./?action=sale_modify_check&id={{venta.getId}}"><i class="fa fa-pencil"></i></a></td>
                        <td><a href="./?action=sale_delete&id={{venta.getId}}"><i class="fa fa-trash"></i></a></td>
                    </tr>
                    {% endfor %}
                </table>
                {% if num_pagina > 0 %}
                <button id="izquierda" type="submit" onClick="window.location.href='./?action=sale_list&anterior={{num_pagina}}'">Anterior</button>
                {% endif %}
                {% if num_pagina < total_paginas %}
                <button id="derecha" type="reset" onClick="window.location.href='./?action=sale_list&siguiente={{num_pagina}}'">Siguiente</button>
                {% endif %}
            </article>
            <a id="add" href="./?action=sale_add">Agregar nueva venta</a>
        </div>
{% endblock %}